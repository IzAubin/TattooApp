                    input(name='Id_projet' type="hidden" value= passeIdProjet)
                    input(name='Id_Client' type="hidden" value= passeIdClient)
                    input#Nom_projet(name="Nom_projet" placeholder="Nom du projet" value= oldNomProjet)
